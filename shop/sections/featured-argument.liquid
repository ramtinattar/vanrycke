
<div class="container container--larger">
	<div class="argument">
		<div class="Grid">
			{%- for block in section.blocks -%}
				<div class="Grid__Cell 1/3--lap-and-up">
					<div class="argument__block">
						<h2 class="h3-k">{{ block.settings.title }}</h2> 
						<div class="text" style="color:{{block.settings.color_text}}">
							{{ block.settings.description }}
						</div>
					</div>
				</div>
			{%- endfor -%}
		</div>
	</div>
</div>


{% schema %}
{
	"name": "Featured argument",
	"max_blocks": 3,
	"blocks": [
    {
			"name": "Argument",
			"type": "Banner",
			"settings": [
        {
					"type": "text",
					"id": "title",
					"label": "Title"
				},
				{
					"type": "textarea",
					"id": "description",
					"label": "Subtitle"
				},
        {
          "type": "color",
          "id": "color_title",
          "label": "Title color"
        },
        {
          "type": "color",
          "id": "color_text",
          "label": "Text color"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
			]
    }
  ],
  "presets": [
    {
      "category": "Arguments",
      "name": "Featured arguments",
      "settings": {}
    }
  ]
}
{% endschema %}
