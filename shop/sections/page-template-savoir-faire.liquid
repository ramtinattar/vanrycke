{%- include 'page-blocks' -%}
{% schema %}
{
  "name": "Histoire",
  "settings": [
  ],
  "blocks": [
    {
      "type": "banner",
      "name": "Banner",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Background"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        }
      ]
    },
    {
      "type": "divider",
      "name": "Divider",
      "settings": [
        {
          "type": "text",
          "id": "desktop",
          "label": "Desktop css",
          "default": "margin:20px 0px",
          "placeholder": "margin:100px 0px",
          "info": "Used above 801px"
        },
        {
          "type": "text",
          "id": "mobile",
          "label": "Mobile css",
          "default": "margin:10px 0px",
          "placeholder": "margin:10px 0px",
          "info": "Used only on mobile (under 800px)"
        }
      ]
    },
    {
      "type": "title",
      "name": "Title",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "checkbox",
          "id": "h2",
          "label": "Smaller title",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "centered",
          "label": "Text center",
          "default": false
        }
      ]
    },
    {
      "type": "content",
      "name": "Content",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "checkbox",
          "id": "revert",
          "label": "Inverser",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "title_centered",
          "label": "Title center",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "centered",
          "label": "Text center",
          "default": false
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title",
          "info": "Leave empty to hide"
        },
        {
          "type": "richtext",
          "id": "richtext",
          "label": "Text"
        },
        {
           "type": "select",
           "id": "image_width",
           "options": [
              { "value": "1/2|1/2", "label": "1/2"},
              { "value": "1/3|2/3", "label": "1/3"},
              { "value": "2/3|1/3", "label": "2/3"},
              { "value": "1/4|3/4", "label": "1/4"},
              { "value": "3/4|1/4", "label": "3/4"},
              { "value": "1/5|4/5", "label": "1/5"},
              { "value": "2/5|3/5", "label": "2/5"},
              { "value": "3/5|2/5", "label": "3/5"},
              { "value": "4/5|1/5", "label": "4/5"},
              { "value": "1/6|5/6", "label": "1/6"},
              { "value": "5/6|1/6", "label": "5/6"}
           ],
           "label": "Image width"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "url",
          "id": "url",
          "label": "Url"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Voir plus",
          "info": "Button text"
        }
      ]
    }
  ]
}
{% endschema %}
