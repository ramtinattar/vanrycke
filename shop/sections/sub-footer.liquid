<div class="subfooter">
  <div class="container">
    <div class="argument argument--small">
      <div class="Grid ">
    		{%- for block in section.blocks -%}
    			<div class="Grid__Cell 1/3--lap-and-up">
    				<div class="argument__block">
    					<h2 class="h3-k">{{ block.settings.title }}</h2>
    					<div class="text"> 
    						{{ block.settings.richtext }}
    					</div>
    				</div>
    			</div>
    		{%- endfor -%}
      </div>
  	</div>
  </div>
</div>
{% schema %}
{
  "name": "Sub footer",
  "settings": [

  ],
  "blocks": [
    {
      "type": "block",
      "name": "Element",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "richtext",
          "label": "Description"
        }
      ]
    }
  ]
}
{% endschema %}
